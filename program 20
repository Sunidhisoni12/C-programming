//binary to decimal number
#include<stdio.h>
#include<math.h>
int main()
{
    int rem,num,rev=0,p=0;
    printf("enter binary number:");
    scanf("%d",&num);

    while(num>0)
    {
    rem=num%10;
        if(rem!=0)
        {
            rev=rev+(int)pow(2,p);
        }
        num=num/10;
        p=p+1;
    }
    printf("decimal number=%d",rev);
    return 0;
}
